{
  "name": "@md/web",
  "type": "module",
  "version": "0.6.2",
  "private": true,
  "scripts": {
    "start": "pnpm run dev",
    "dev": "vite --host",
    "build": "run-p type-check \"build:only {@}\" --",
    "build:only": "vite build",
    "build:h5-netlify": "run-p type-check \"build:h5-netlify:only {@}\" --",
    "build:h5-netlify:only": "cross-env SERVER_ENV=NETLIFY vite build",
    "build:custom-domain": "run-p type-check \"build:custom-domain:only {@}\" --",
    "build:custom-domain:only": "cross-env CUSTOM_DOMAIN=true vite build",
    "build:cli": "pnpm run build && npx shx rm -rf packages/md-cli/dist && npx shx rm -rf dist/**/*.map && npx shx cp -r dist packages/md-cli/ && cd packages/md-cli && npm pack",
    "build:analyze": "cross-env ANALYZE=true vite build",
    "compile:extension": "pnpm --prefix ./src/extension run compile",
    "preview": "pnpm run build && vite preview",
    "preview:pages": "cross-env CF_PAGES=1 pnpm run build:h5-netlify && wrangler pages dev ./dist",
    "release:cli": "node ./scripts/release.js",
    "ext:dev": "wxt",
    "ext:zip": "wxt zip",
    "firefox:dev": "wxt -b firefox",
    "firefox:zip": "wxt zip -b firefox",
    "type-check": "vue-tsc --build --force",
    "postinstall": "wxt prepare",
    "package:extension": "pnpm --prefix ./src/extension run package",
    "copy:hljs-themes": "node ./scripts/copy-hljs-themes.cjs"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.913.0",
    "@aws-sdk/s3-request-presigner": "^3.913.0",
    "@exercism/highlightjs-gdscript": "^0.0.1",
    "@md/core": "workspace:*",
    "@md/shared": "workspace:*",
    "@ssttevee/multipart-parser": "^0.1.9",
    "@vee-validate/yup": "^4.15.0",
    "@vueuse/core": "^13.9.0",
    "@zumer/snapdom": "1.9.14",
    "axios": "^1.12.2",
    "browser-image-compression": "^2.0.2",
    "buffer-from": "^1.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "codemirror": "^5.65.19",
    "core-js": "^3.46.0",
    "cos-js-sdk-v5": "^1.8.7",
    "crypto-js": "^4.2.0",
    "csstype": "^3.1.3",
    "es-toolkit": "^1.40.0",
    "front-matter": "^4.0.2",
    "highlight.js": "^11.11.1",
    "html-to-image": "^1.11.13",
    "isomorphic-dompurify": "^2.29.0",
    "juice": "^11.0.3",
    "katex": "^0.16.25",
    "lucide-vue-next": "^0.546.0",
    "marked": "^16.4.1",
    "node-fetch": "^3.3.2",
    "pinia": "^3.0.1",
    "qiniu-js": "^3.4.2",
    "radix-vue": "^1.9.12",
    "reading-time": "^1.5.0",
    "reka-ui": "^2.5.1",
    "remark-parse": "^11.0.0",
    "remark-stringify": "^11.0.0",
    "snapdom": "^0.1.2",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "tiny-oss": "^0.5.1",
    "tw-animate-css": "^1.4.0",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0",
    "uuid": "^11.1.0",
    "vee-validate": "^4.15.0",
    "vue": "^3.5.13",
    "vue-pick-colors": "^1.8.0",
    "vue-sonner": "^2.0.9",
    "yup": "^1.7.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251014.0",
    "@md/config": "workspace:*",
    "@tailwindcss/postcss": "^4.1.15",
    "@tailwindcss/vite": "^4.1.15",
    "@types/buffer-from": "^1.1.3",
    "@types/codemirror": "^5.60.15",
    "@types/crypto-js": "^4.2.2",
    "@types/katex": "^0.16.7",
    "@types/mdast": "^4.0.4",
    "@types/unist": "^3.0.3",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "less": "^4.4.2",
    "linkedom": "^0.18.12",
    "ohash": "^2.0.11",
    "postcss": "^8.5.1",
    "rollup": "^4.52.5",
    "rollup-plugin-visualizer": "^6.0.5",
    "shx": "^0.4.0",
    "tailwindcss": "^4.1.15",
    "unplugin-auto-import": "^20.2.0",
    "unplugin-vue-components": "^29.0.0",
    "vite": "^6.3.4",
    "vite-plugin-node-polyfills": "^0.24.0",
    "vite-plugin-pwa": "^1.1.0",
    "vite-plugin-radar": "^0.10.0",
    "vite-plugin-static-copy": "^3.1.4",
    "vite-plugin-vue-devtools": "^8.0.3",
    "vue-tsc": "^3.1.1",
    "wrangler": "^4.43.0",
    "wxt": "^0.20.11"
  }
}
